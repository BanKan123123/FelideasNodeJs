<div class="mt4 home-card pd-fr">

    <h1>Create a new Felidae</h1>

    <form method = "POST" action = "/felidaes/store">
        <div class="mb-3">
            <label for="name" class="form-label">Name Felidae</label>
            <input name="name" type="text" class="form-control" id="name">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" class="form-control" id="description" name="description">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video Id</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary">Create Felidae</button>
    </form>
</div>